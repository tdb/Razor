#!/bin/bash

# On 15.10 the startup procedure might run this before
# DHCP has completed, so this is a bodge to avoid that.
sleep 120

# Get current IP
node_ip=`facter ipaddress`
# Send IP up
curl <%= callback_url("postinstall", "send_ips") %>/$node_ip
# get final script
curl <%= callback_url("postinstall", "boot") %> | sh
# Send final state
curl <%= callback_url("postinstall", "final") %> &
